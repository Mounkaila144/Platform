{% extends 'base.html.twig' %}

{% block title %}Branche index{% endblock %}

{% block body %}
    <h1>Branche index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for branche in branches %}
            <tr>
                <td>{{ branche.id }}</td>
                <td>{{ branche.nom }}</td>
                <td>
                    <a href="{{ path('app_branche_show', {'id': branche.id}) }}">show</a>
                    <a href="{{ path('app_branche_edit', {'id': branche.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_branche_new') }}">Create new</a>
{% endblock %}
